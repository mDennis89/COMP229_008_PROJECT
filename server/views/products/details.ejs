<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">

              <div class="form-group">
                <label for="NameTextField">Brand</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Product Brand" name="brand" value="<%= products.Brand %>" required>
              </div>

              <div class="form-group">
                <label for="AuthorTextField">Model</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Product Model" name="model" value="<%= products.Model %>"  required>
              </div>
              
              <div class="form-group">
                <label for="GenreTextField">Specifications</label>
                <input type="text" class="form-control" id="GenreTextField"
                placeholder="Product table-striped" name="specifications" value="<%= products.Specifications %>"  required>
              </div>

              <div class="form-group">
                <label for="PriceTextField">Price</label>
                <input type="text" class="form-control" id="PriceTextField"
                placeholder="Product Price" name="price" value="<%= products.Price %>"  required>
              </div>



              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/products" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>


<% include ../partials/footer.ejs %>
