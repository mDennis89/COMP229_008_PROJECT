<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="BrandTextField">Brand</label>
                <input type="text" class="form-control" id="BrandTextField"
                placeholder="Product Brand" name="brand" value="<%= products.Brand %>" required>
              </div>
              <div class="form-group">
                <label for="ModelTextField">Model</label>
                <input type="text" class="form-control" id="ModelTextField"
                placeholder="Product Model" name="model" value="<%= products.Model %>"  required>
              </div>
              <div class="form-group">
                <label for="SpecTextField">Specifications</label>
                <input type="text" class="form-control" id="SpecTextField"
                placeholder="Product table-striped" name="specifications" value="<%= products.Specifications %>"  required>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Price</label>
                <input type="text" class="form-control" id="PriceTextField"
                placeholder="Product Price" name="price" value="<%= products.Price %>"  required>
              </div>
              <div class="form-group">
                <label for="EmailTextField">Email</label>
                <input type="text" class="form-control" id="EmailTextField"
                placeholder="Email Address" name="email" value="<%= users.Email %>"  required>
              </div>
              <div class="form-group">
                <label for="PhoneTextField">Phone Number</label>
                <input type="text" class="form-control" id="PhoneTextField"
                placeholder="Phone Number" name="phone" value="<%= users.PhoneNumber %>"  required>
              </div>
              <div class="form-group">
                <label for="MailAddressTextField">Mail Address</label>
                <input type="text" class="form-control" id="MailAddressTextField"
                placeholder="Mail Address" name="mailaddress" value="<%= users.MailAddress %>"  required>
              </div>
              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/products" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>


<% include ../partials/footer.ejs %>
