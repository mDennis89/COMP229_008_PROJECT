<% include ../partials/header.ejs %>


<div class = "container">
  <div class="row">
      <div class="offset-md-4 col-md-4">
          <h1>Please Register</h1>
          <form method="POST" action="/register/add" autocomplete="off">

              <fieldset class="form-group">
                <label for="Firstname">First Name: </label>
                <input type="text" class="form-control"
                name="firstname" placeholder="Enter first name"
                id="firstname" required autofocus>
              </fieldset>

              <fieldset class="form-group">
                <label for="Lastname">Last Name: </label>
                <input type="text" class="form-control"
                name="lastname" placeholder="Enter last name"
                id="lastname" required autofocus>
              </fieldset>

              <fieldset class="form-group">
                  <label for="userid">User ID: </label>
                  <input type="text" class="form-control"
                  name="userid" placeholder="Enter user ID"
                  id="userid" required autofocus>
              </fieldset>

              <fieldset class="form-group">
                  <label for="password">Password: </label>
                  <input type="password" class="form-control"
                  name="password" placeholder="Enter password"
                  id="password" required>
              </fieldset>

              <fieldset class="form-group">
                  <label for="email">Email: </label>
                  <input type="email" class="form-control"
                  name="email" placeholder="Enter Email Address"
                  id="email" required>
              </fieldset>

              <fieldset class="form-group">
                <label for="phonenumber">Phone Number: </label>
                <input type="phonenumber" class="form-control"
                name="phonenumber" placeholder="Enter Phone Number"
                id="phonenumber" required>
               </fieldset>

               <fieldset class="form-group">
                <label for="mailaddress">Mail Address: </label>
                <input type="mailaddress" class="form-control"
                name="mailaddress" placeholder="Enter Mail Address"
                id="mailaddress" required>
               </fieldset>

              <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary" >
                  <i class="fa fa-check-square-o"></i> Register</button>

                  <a href="/" class="btn btn-warning">
                    <i class="fa fa-undo"></i> Cancel
                </button>
                  </a>
              </fieldset>

          </form>
      </div>
  </div>


</main>


