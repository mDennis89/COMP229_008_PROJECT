<% include ../partials/header.ejs %>

<div class="container">
  <div class="row">
      <div class="offset-md-100 col-md-4">
          <h1>Sign in</h1>
          <form method="POST" autocomplete="off">

          <% if (error) { %> <!-- Use the "error" variable from the template -->
            <div class="alert alert-danger" role="alert">
              Incorrect user ID or password. Please try again.
            </div>
          <% } %>

          <form method="POST" autocomplete="off">
            <fieldset class="form-group">
                <label for="username">User ID: </label>
                <input type="text" class="form-control"
                name="userid" placeholder="Enter user ID"
                id="userid" required autofocus>
            </fieldset>

            <fieldset class="form-group">
                <label for="password">Password: </label>
                <input type="password" class="form-control"
                name="password" placeholder="Enter password"
                id="password" required>
                or
                <a href="/register">Register Here</a>
            </fieldset>

            <fieldset class="form-group text-right">
              <button type="submit" class="btn btn-primary" >
                <i class="fa fa-check-square-o"></i> Login</button>

                <a href="/" class="btn btn-warning">
                  <i class="fa fa-undo"></i> Cancel
              </button>
                </a>
            </fieldset>

        </div>
        <div class="col-md-offset-1 col-md-10 text-center">
          <ul class="pagination pagination-lg pager" id="myPager"></ul>
        </div>
      </div>
    </div>

